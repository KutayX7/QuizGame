#include <iostream>

int main() {
    using namespace std;

    int difficulty;

    cout << "Choose the difficulty level:\n";
    cout << "1 - Easy\n";
    cout << "2 - Medium\n";
    cout << "3 - Hard\n";
    cout << "Enter your choice (1-3): ";
    cin >> difficulty;

    if (difficulty == 1) {
        cout << "Easy level selected.\n";        
    }
    else if (difficulty == 2) {
        cout << "Medium level selected.\n";
    }
    else if (difficulty == 3) {
        cout << "Hard level selected.\n";   
    }
    else {
        cout << "Invalid choice.\n";
    }

    return 0;
}
